.ecb-float-container
	display: flex
	justify-content: center
	align-items: center
	position: fixed
	right: 32px
	bottom: 32px
	cursor: pointer
	transform: scale(0)
	transform-origin: bottom right
	transition: transform .3s ease

	.ecb-float-message
		background-color: $color-white
		color: $color-text
		padding: 10px 15px
		border: none;
		border-radius: 5px 0px 5px 5px
		margin-right: 10px
		box-shadow: 2px 2px 1px 0px rgba(0, 0, 0, 0.2);
		font-size: 10pt

	.ecb-float-button
		display: flex
		justify-content: center
		align-items: center
		height: 56px
		width: 56px
		background: $color-primary
		border-radius: 100%
		box-shadow: 0 0 5px 0 rgba(110, 72, 170, 0.5)
		transform: scale(1)
		transition: -ms-transform .3s ease,-webkit-transform .3s ease,transform .3s ease
		z-index: 999
		-animation: pulse 1.25s infinite cubic-bezier(0.66, 0, 0, 1)

		img
			max-height: calc(100% - 25px);

	.ecb-float-icon
		max-width: 48px
		max-height: 48px
		border-radius: 50%
